using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Automated_Answering_Service
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Please 'listen' to the following selections and choose 0, 1, 3, 5");
            string userValue = Console.ReadLine();
            
            if (userValue == "0")
            {
                Console.WriteLine("We're tranferring you to an operator");
                Console.ReadLine(); 
            }
            else if (userValue == "1")
            {
                Console.WriteLine("Our sales offices are closed at this time");
                Console.ReadLine();
            }
            else if (userValue == "3")
            {
                Console.WriteLine("Please record your message now");
                Console.ReadLine();
            }
            else if (userValue == "5")
            {
                Console.WriteLine("Good Bye");
                Console.ReadLine();
            }
            else if (userValue != "0, 1, 3, 5")
            {
                Console.WriteLine("Sorry you've entered an invalid option");
                Console.ReadLine();
            }
        }
    }
}
